meta {
  name: /registration
  type: http
  seq: 5
}

put {
  url: {{base_url}}/api/registration
  body: json
  auth: none
}

body:json {
  {
      "company": {
          "active": true,
          "companyName": "{{testCompanyName}}"
      },
      "adminUser": {
          "email": "{{testEmail}}",
          "userPassword": "{{testPassword}}"
      }
  }
}

script:pre-request {
  bru.setVar("testCompanyName", "Test Company Name " + (new Date().getTime()));
  bru.setVar("testEmail", "myemail_" + (new Date().getTime()) + "@test.com");
  
  
  
}

script:post-response {
  const response = res.getBody();
  
  bru.setVar("newRegistrationUser", response.company.id + "/" + response.adminUser.email);
  
  test("Status code is 200", function () {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Company Created", function () {
    expect(response.company.id).to.be.greaterThan(0);
    expect(response.company.active).to.be.true;
  });
  
  test("User Created", function () {
    expect(response.adminUser.id).to.be.greaterThan(0);
    expect(response.adminUser.companyId).to.equal(response.company.id);
    expect(response.adminUser.userPassword).to.be.null;
  });
  
}

settings {
  encodeUrl: true
  timeout: 0
}
